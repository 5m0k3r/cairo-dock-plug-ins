COMPIZ=$(pgrep compiz) || COMPIZ=0
XCOMPMGR=$(pgrep xcompmgr) || XCOMPMGR=0

if [ $COMPIZ -ne 0 ]; then
  kill $COMPIZ
fi
if [ $XCOMPMGR -ne 0 ]; then
  kill $XCOMPMGR
fi
